<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.nauma.restaurantadvisorapp.Main2Activity"
    android:scrollbars="none"
    android:id="@+id/restaurantscroll" >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        <TextView
            android:id="@+id/single_restaurant_name"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Restaurant name"
            android:textAllCaps="true"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="40dp"
            android:layout_height="37dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="fitEnd"
            app:layout_constraintStart_toEndOf="@+id/single_restaurant_name"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_star"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/single_restaurant_note"
            android:layout_width="38dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:text="4.5"
            android:textColor="?android:attr/colorPressedHighlight"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/restaurant_weeklabel"
            android:layout_width="168dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Horaire semaine : "
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/single_restaurant_name"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/restaurant_weektime"
            android:layout_width="147dp"
            android:layout_height="28dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="de 11h00 à 20h00"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.486"
            app:layout_constraintStart_toEndOf="@+id/restaurant_weeklabel"
            app:layout_constraintTop_toBottomOf="@+id/single_restaurant_name"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/restaurant_weekendlabel"
            android:layout_width="169dp"
            android:layout_height="31dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Horaire week-end : "
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_weeklabel"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/restaurant_weekendtime"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="de 12h00 à 18h00"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.414"
            app:layout_constraintStart_toEndOf="@+id/restaurant_weekendlabel"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_weektime"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/restaurant_numberlabel"
            android:layout_width="177dp"
            android:layout_height="27dp"
            android:layout_marginStart="16dp"
            android:text="Numéro téléphone : "
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_weekendlabel" />

        <TextView
            android:id="@+id/restaurant_number"
            android:layout_width="135dp"
            android:layout_height="24dp"
            android:layout_marginEnd="44dp"
            android:layout_marginStart="16dp"
            android:text="0124578112"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/restaurant_numberlabel"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_weekendtime" />

        <TextView
            android:id="@+id/restaurant_sitelabel"
            android:layout_width="51dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:text="Site :"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_numberlabel"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/restaurant_site"
            android:layout_width="261dp"
            android:layout_height="27dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="www.site.com"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.809"
            app:layout_constraintStart_toEndOf="@+id/restaurant_sitelabel"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_number" />


        <TextView
            android:id="@+id/restaurant_adresselabel"
            android:layout_width="82dp"
            android:layout_height="25dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="Adresse : "
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.027"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_sitelabel"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/restaurant_adresse"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/textview_border"
            android:maxLines="2"
            android:paddingLeft="4pt"
            android:paddingRight="4pt"
            android:paddingTop="1pt"
            android:scrollbars="vertical"
            android:text="adresse of the restaurant"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_adresselabel"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/restaurant_descriptionlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="Description : "
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.03"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_adresse" />

        <TextView
            android:id="@+id/restaurant_description"
            android:layout_width="329dp"
            android:layout_height="66dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/textview_border"
            android:lineSpacingExtra="2sp"
            android:maxLines="3"
            android:paddingLeft="4pt"
            android:paddingRight="4pt"
            android:paddingTop="1pt"
            android:scrollbars="vertical"
            android:text="restaurant description"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_descriptionlabel" />

        <Button
            android:id="@+id/buttongetmenu"
            android:layout_width="374dp"
            android:layout_height="53dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:elevation="0dp"
            android:text="Voir la carte"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_description"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/Commentlabel"
            android:layout_width="390dp"
            android:layout_height="32dp"
            android:background="@drawable/textview_border"
            android:paddingLeft="10dp"
            android:text="Commentaires"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/buttongetmenu"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/totalcomments"
            android:layout_width="81dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="10"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/Commentlabel"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="@+id/Commentlabel"
            app:layout_constraintTop_toBottomOf="@+id/buttongetmenu" />

        <ListView
            android:id="@+id/commentslistview"
            android:layout_width="357dp"
            android:layout_height="121dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:focusableInTouchMode="false"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Commentlabel"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/nocomment"
            android:layout_width="286dp"
            android:layout_height="61dp"
            android:layout_marginTop="16dp"
            android:text="No comment found."
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Commentlabel"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/opencommentdialog"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Add comment"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/Commentlabel"
            app:layout_constraintHorizontal_bias="0.862"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/totalcomments" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>